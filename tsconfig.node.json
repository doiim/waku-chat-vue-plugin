{
    "compilerOptions": {
        "composite": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "declaration": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./dist",
        "declarationDir": "./dist",
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "vite.config.ts"
    ],
}